@* CategoryActionBar.razor *@

<div class="mt-2 mt-lg-0">
    <span class="text-nowrap pe-3">
        <a role="button" class="editIcons me-3" @onclick="OnEdit">
            <i class="bi bi-pencil-fill text-success" title="Edit Category" aria-label="Edit Category"></i>
        </a>
        <a role="button" href="@($"/categories/email/{CategoryId}")" class="editIcons me-3">
            <i class="bi bi-envelope-fill text-warning" title="Email Category" aria-label="Email Category Members"></i>
        </a>
        <a role="button" class="editIcons me-3" @onclick="OnDelete">
            <i class="bi bi-trash-fill text-danger" title="Delete Category" aria-label="Delete Category"></i>
        </a>
        <a role="button" class="editIcons me-3" @onclick="ExpandIfCollapsed">
            <i class="bi bi-eye-fill text-info" title="View Category Members" aria-label="Toggle Category Contacts"></i>
        </a>
    </span>
</div>

@code {
    [Parameter] public int CategoryId { get; set; }
    [Parameter] public EventCallback OnEdit { get; set; }
    [Parameter] public EventCallback OnDelete { get; set; }
    [Parameter] public EventCallback OnToggle { get; set; }

    private async Task ExpandIfCollapsed()
    {
        if (OnToggle.HasDelegate)
        {
            await OnToggle.InvokeAsync();
        }
    }
}

